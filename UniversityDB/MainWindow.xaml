<Window x:Class="UniversityDB.MainWindow"
        x:Name="MainW"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniversityDB"
        xmlns:model="clr-namespace:UniversityDB.Models"
        xmlns:bindTreeViewExpand="clr-namespace:UniversityDB.Infrastructure"
        mc:Ignorable="d"
        Title="UniversityDB" Height="450" Width="800">
    <Grid>
        <TreeView x:Name="treeView" ItemsSource="{Binding Faculties, UpdateSourceTrigger=PropertyChanged}">
            <TreeView.Resources>
                <Style TargetType="TreeViewItem" >
                    <Setter Property="bindTreeViewExpand:Behaviours.ExpandingBehaviour"
                            Value="{Binding DataContext.ExpandCommand, Source={x:Reference treeView}}" />
                </Style>
                <HierarchicalDataTemplate DataType="{x:Type model:UObject}" ItemsSource="{Binding Path=Childrens, UpdateSourceTrigger=PropertyChanged}">
                    <TextBlock Text="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged}">
                        <TextBlock.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Переглянути"
                                          CommandParameter="{Binding}"
                                          Command="{Binding DataContext.ViewCommand, Source={x:Reference treeView}}"/>
                                <MenuItem  Header="Додати"
                                           CommandParameter="{Binding}"
                                           Command="{Binding DataContext.AddCommand, Source={x:Reference treeView}}"/>
                                <MenuItem  Header="Редагувати"
                                           CommandParameter="{Binding}"
                                           Command="{Binding DataContext.EditCommand, Source={x:Reference treeView}}"/>
                                <MenuItem  Header="Видалити"
                                           CommandParameter="{Binding}"
                                           Command="{Binding DataContext.DeleteCommand, Source={x:Reference treeView}}"/>
                            </ContextMenu>
                        </TextBlock.ContextMenu>
                    </TextBlock>
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>
    </Grid>
</Window>
