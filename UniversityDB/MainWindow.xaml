<Window x:Class="UniversityDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniversityDB"
        xmlns:model="clr-namespace:UniversityDB.Models"
        mc:Ignorable="d"
        Title="UniversityDB" Height="450" Width="800">
    <Grid>
        <TreeView ItemsSource="{Binding Faculties}">
            <TreeView.Resources>
                <!--
                <Style TargetType="TreeViewItem">
                    <Setter Property="bindTreeViewExpand:Behaviours.ExpandingBehaviour" Value="{Binding ExpandingCommand}"/>
                </Style>
                -->
                <HierarchicalDataTemplate DataType="{x:Type model:UObject}" ItemsSource="{Binding Path=Childrens}">
                    <TextBlock Text="{Binding Path=Name}">
                        <TextBlock.ContextMenu>
                            <ContextMenu>
                                <MenuItem Command="{Binding ViewCommand}" CommandParameter="{Binding Id}" Header="Переглянути"/>
                                <MenuItem  Header="Додати"/>
                                <MenuItem  Header="Редагувати"/>
                                <MenuItem  Header="Видалити"/>
                            </ContextMenu>
                        </TextBlock.ContextMenu>
                    </TextBlock>
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>
    </Grid>
</Window>
